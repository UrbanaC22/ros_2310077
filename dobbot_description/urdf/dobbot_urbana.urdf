<?xml version="1.0"?>
<robot name="dobbot_urbana">

  <material name="purple">
      <color rgba="0.6 0.2 0.7 0.7"/>
   </material> 

   <link name="base_link">
      <visual>
         <geometry>
           <cylinder length="0.08" radius="0.04"/>
         </geometry>
         <origin rpy="0 0 0" xyz="0 0 0"/>
         <material name="purple"/>
          
      </visual>
   </link>    

   <link name="link1">
      <visual>
         <origin rpy="0 0 0" xyz= "0 0 0"/>
         <geometry>
           <box size= "0.03 0.03 0.04"/>
         </geometry>
         <material name="pink">
           <color rgba="0.9 0.3 0.5 0.8"  />
         </material>
      </visual>
   </link>

   <joint name="joint1" type="revolute">
        <origin rpy="0 0 0" xyz="0.0 0.0 0.06"/>
        <parent link="base_link"/>
        <child link="link1"/>
        <axis xyz="0.0 0.0 1.0" />
        <limit effort="100.0" lower="-3.14159265359" upper="3.14159265359" velocity="0.005"/>
   </joint>

   <link name="link2">
      <visual>
         <origin rpy="0 0 0" xyz= "0 0 0"/>
         <geometry>
           <box size= "0.03 0.08 0.01"/>
         </geometry>
         <material name="blue">
           <color rgba="0 0 1.0 0.8"  />
         </material>
      </visual>
   </link>

   <joint name="joint2" type="fixed">
        <origin rpy="0 0 0" xyz="0.0 0.025 0.025"/>
        <parent link="link1"/>
        <child link="link2"/>
  
   </joint>

   <link name="right_wheel">
      <visual>
         <origin rpy="0 0 0" xyz= "0 0 0"/>
         <geometry>
           <cylinder length="0.01" radius="0.02"/>
         </geometry>
         <material name="black">
           <color rgba="0.0 0.0 0.0 1.0"  />
         </material>
      </visual>
   </link>

   <joint name="joint3" type="revolute">
        <origin rpy="0 1.57075 0" xyz="0.04 0 -0.04"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="1.0 0.0 0.0" />
        <limit effort="100.0" lower="-0.3" upper="0.3" velocity="0.005"/>
  
   </joint>

   <link name="left_wheel">
      <visual>
         <origin rpy="0 0 0" xyz= "0 0 0"/>
         <geometry>
           <cylinder length="0.01" radius="0.02"/>
         </geometry>
         <material name="black">
           <color rgba="0.0 0.0 0.0 1.0"  />
         </material>
      </visual>
   </link>

   <joint name="joint4" type="revolute">
        <origin rpy="0 1.57075 0" xyz="-0.04 0 -0.04"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="1.0 0.0 0.0" />
        <limit effort="100.0" lower="-0.3" upper="0.3" velocity="0.005"/>
   </joint>     

</robot>